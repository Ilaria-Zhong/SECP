@model IEnumerable<SECP.Models.Project> 
@{
    ViewBag.Title = "ChangePIstudent";
    Layout = "~/Views/Project.cshtml";
}
<link href="~/css/bootstrap-button.css" rel="stylesheet" />
<link href="~/css/ChangeMO.css" rel="stylesheet" />
@foreach (SECP.Models.Project k in Model)
 {
using(Html.BeginForm())
{
<div class="Change-PI-main">
    <div class="Change-PI-tittle">
        <span>
            <img src="~/images/favicon.ico" />项目</span>
        <nobr>的基本信息</nobr>
    </div>
    <div class="Change-PI-table">
        <table>
            <tr>
                <td class="Change-PI-table-tittle">项目名称:</td>
                <td class="Change-PI-table-content"><input type="text" name="Project_Name" value="@k.Project_Name" /></td>
                <td class="Change-PI-table-tittle">要求经验:</td>
                <td class="Change-PI-table-content">
                    <select name="Project_Requirement">
                        <option value="无需经验" selected = "@ViewData["a"]">无需经验</option>
                        <option value="半年" selected = "@ViewData["b"]">半年</option>
                        <option value="1年" selected = "@ViewData["c"]">1年</option>
                        <option value="2年及以上" selected = "@ViewData["d"]">2年及以上</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td class="Change-PI-table-tittle">项目工期:</td>
                <td class="Change-PI-table-content"><input type="text" name="Project_TimeLimeit" value="@k.Project_TimeLimeit" /></td>
                <td class="Change-PI-table-tittle">项目报酬:</td>
                <td class="Change-PI-table-content"><input type="text" name="Project_Money" value="@k.Project_Money" /></td>
            </tr>
            <tr>
                <td class="Change-PI-table-tittle">项目联系方式:</td>
                <td class="Change-PI-table-content"><input type="text" name="Project_Contact" value="@k.Project_Contact" /></td>
            </tr>

        </table>
    </div>
    <div class="Change-PI-deta">
        <span>
            <img src="~/images/favicon.ico" />详细信息</span>
        <div class="Change-PI-deta-main">
            <span>详细说明:</span>
            <textarea name="Project_Content">@k.Project_Content</textarea>
        </div>
    </div>
    <div class="Change-PI-button">
        <input type="submit" name="TK" class="button-3d button-primary button-rounded" value="     保存      " style="background: #077ace; color: #fff; border: 1px solid #077ace; " />
    </div>
</div>
}
}