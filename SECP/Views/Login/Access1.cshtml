@{
    ViewBag.Title = "Access1";
}

<head>
<title>注册</title>
    <link href="~/css/Access1.css" rel="stylesheet" />
    <script src="~/js/jquery-2.1.0.min.js"></script>
    <script src="~/js/easyfrom.js"></script>

</head>

<body>
    <div class="head">
        <div class="HomeLogo">
            <a href="~/Home.html">
                <img src="~/images/accesslogo.png" draggable="false" />
            </a>
        </div>
        <div class="BackLogin" draggable="false">
            已有帐号？<a href="~/Login/Login">
                <div class="Back-arrow">
                    <img src="~/images/back-arrow.png" />
                </div>
            </a>
        </div>

    </div>
<div class="form-div">
    <form id="reg-form" method="post">

<ul id="tabs">
    <li><a href="#" title="tab2">教师注册</a></li>  
</ul>

<div id="content"> 
  
    <div id="tab2">
        <h2>请认真填写您的教师信息！</h2>
         <table>
             <tr>
                <td>用户名</td>
                <td><input name="tea_UserName" type="text" id="tea_UserName" easyform="length:4-16;char-normal;real-time;" message="用户名必须为4—16位的英文字母或数字" easytip="disappear:lost-focus;theme:blue;" ajax-message="用户名已存在!"/>
                </td>          
                </tr>
             <tr>
                <td>密码</td>
                <td><input name="tea_psw1" type="password" id="tea_psw1" easyform="length:6-16;" message="密码必须为6—16位" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr>
            <tr>
                <td>确认密码</td>
                <td><input name="tea_psw2" type="password" id="tea_psw2" easyform="length:6-16;equal:#tea_psw1;real-time;" message="两次密码输入要一致" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr>
            <tr>
                <td>email</td>
                <td><input name="tea_email" type="text" id="tea_email" easyform="email;real-time;" message="Email格式要正确" easytip="disappear:lost-focus;theme:blue;" ajax-message="这个Email地址已经被注册过，请换一个吧!"/></td>
            </tr>
            <tr>
                <td>名字</td>
                <td><input name="tea_nickname" type="text" id="tea_nickname" easyform="length:2-16;" message="昵称必须为2—16位" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr>            
             <tr>
                <td>出生日期</td>
                <td><input name="tea_year" type="text" id="tea_Year" easyform="date;real-time" message="请输入日期格式为（YYXX-YY-XX）" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr>
            <tr>
                <td>性别</td>
                <td><input name="tea_sex" type="text" id="tea_sex" easyform="length:1" message="请输入性别" easytip="disappear:lost-focus;theme:blue;" /> </td>
            </tr>
            <tr>
                <td>所教课程</td>
                <td><input name="tea_class" type="text" id="tea_class" easyform="length:2-16;" message="请输入专业" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr>            
             <tr>
                <td>毕业学校</td>
                <td><input name="tea_school" type="text" id="tea_school" easyform="length:2-16;" message="请输入毕业学校" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr>
             <tr>
                <td>当前学校</td>
                <td><input name="tea_AtSchool" type="text" id="tea_AtSchool" easyform="length:2-16;" message="请输入当前工作学校" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr>
            <tr>
                <td>学历</td>
                <td><input name="tea_edu" type="text" id="tea_edu" easyform="length:2-6;" message="请输入学历" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr>
            <tr>
                <td>电话</td>
                <td><input name="tea_tel" type="text" id="tea_tel" easyform="real-time;length:7-19;" message="请输入电话" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr> 
             <tr>
                <td>通信地址</td>
                <td><input name="tea_address" type="text" id="tea_address" easyform="length:2-50;" message="请输入通信地址" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr> 
             <tr>
                <td>个人介绍</td>
                <td><input name="tea_Glory" type="text" id="tea_Glory" easyform="length:2-200;" message="请输入个人介绍" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr> 
             <tr>
                <td>教师职位</td>
                <td><input name="tea_Position" type="text" id="tea_Position" easyform="length:2-200;" message="请输入教师职位" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr>
             <tr>
                <td>QQ</td>
                <td><input name="QQ" type="text" id="QQ" easyform="length:5-30;real-time;" message="请输入QQ" easytip="disappear:lost-focus;theme:blue;"/></td>
            </tr>             
         </table>
            <input value="教师注册" type="submit" style="margin-right:20px; margin-top:20px;margin-left:160px" name="Access">
			<input value="我有账号，我要登录" type="button" style="margin-right:45px; margin-top:20px;" onclick="window.open('Login')">
    </div>

</div>

</form>

</div>

    
    <script>
        $(document).ready(function () {
            $("#content div").hide(); // Initially hide all content
            $("#tabs li:first").attr("id", "current"); // Activate first tab
            $("#content div:first").fadeIn(); // Show first tab content

            $('#tabs a').click(function (e) {
                e.preventDefault();
                $("#content div").hide(); //Hide all content
                $("#tabs li").attr("id", ""); //Reset id's
                $(this).parent().attr("id", "current"); // Activate this
                $('#' + $(this).attr('title')).fadeIn(); // Show content for current tab
            });
        })();
</script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#reg-form').easyform();
        });
</script>
</body>
